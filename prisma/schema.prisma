// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// 1. Core Identity & Access Control
// ============================================

model User {
  id           String   @id @default(uuid())
  firstName    String   @map("first_name")
  lastName     String   @map("last_name")
  email        String   @unique
  phone        String?
  passwordHash String   @map("password_hash")
  isActive     Boolean  @default(true) @map("is_active")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  userRoles                   UserRole[]
  classLeaders                ClassLeader[]
  attendanceWindows           AttendanceWindow[]
  classAttendance             ClassAttendance[]
  memberAttendance            MemberAttendance[]     @relation("MemberAttendanceMarkedBy")
  kitchenLogs                 KitchenProductionLog[]
  distributionBatches         DistributionBatch[]
  classDistributions          ClassDistribution[]
  empowermentRequestsCreated  EmpowermentRequest[]   @relation("CreatedBy")
  empowermentRequestsApproved EmpowermentRequest[]   @relation("ApprovedBy")
  memberLogs                  MemberLog[]
  requestsCreated             Request[]              @relation("CreatedBy")
  requestsHandled             Request[]              @relation("HandledBy")
  events                      Event[]
  notifications               Notification[]
  activityLogs                ActivityLog[]
  memberTransfers             MemberClassHistory[]
  classOfferings              ClassOffering[]

  @@index([email])
  @@index([isActive])
  @@map("users")
}

model Role {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")

  userRoles UserRole[]

  @@map("roles")
}

model UserRole {
  id         Int      @id @default(autoincrement())
  userId     String   @map("user_id")
  roleId     Int      @map("role_id")
  assignedAt DateTime @default(now()) @map("assigned_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
  @@map("user_roles")
}

// ============================================
// 2. Classes (Platoons & Children Classes)
// ============================================

model Class {
  id        String    @id @default(uuid())
  name      String
  type      ClassType
  createdAt DateTime  @default(now()) @map("created_at")

  // Relations
  members            Member[]
  classLeaders       ClassLeader[]
  classAttendance    ClassAttendance[]
  memberAttendance   MemberAttendance[]
  classDistributions ClassDistribution[]
  classOfferings     ClassOffering[]
  events             Event[]
  memberHistoryFrom  MemberClassHistory[] @relation("FromClass")
  memberHistoryTo    MemberClassHistory[] @relation("ToClass")

  @@index([type])
  @@map("classes")
}

enum ClassType {
  PLATOON
  CHILDREN
}

model ClassLeader {
  id      Int        @id @default(autoincrement())
  classId String     @map("class_id")
  userId  String     @map("user_id")
  role    LeaderRole

  class Class @relation(fields: [classId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([classId, userId, role])
  @@index([classId])
  @@index([userId])
  @@map("class_leaders")
}

enum LeaderRole {
  LEADER
  ASSISTANT
  TEACHER
}

// ============================================
// 3. Members (Beneficiaries)
// ============================================

model Member {
  id               String    @id @default(uuid())
  firstName        String    @map("first_name")
  lastName         String    @map("last_name")
  birthday         DateTime?
  phone            String?
  email            String?
  address          String?   @db.Text
  emergencyContact String?   @map("emergency_contact") @db.Text
  photoUrl         String?   @map("photo_url")
  currentClassId   String    @map("current_class_id")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  // Relations
  currentClass        Class                @relation(fields: [currentClassId], references: [id])
  classHistory        MemberClassHistory[]
  empowermentRequests EmpowermentRequest[]
  memberLogs          MemberLog[]
  eventAttendance     EventAttendance[]
  attendance          MemberAttendance[]

  @@index([currentClassId])
  @@index([birthday])
  @@index([phone])
  @@index([email])
  @@map("members")
}

model MemberClassHistory {
  id            Int      @id @default(autoincrement())
  memberId      String   @map("member_id")
  fromClassId   String?  @map("from_class_id")
  toClassId     String   @map("to_class_id")
  transferredBy String   @map("transferred_by")
  transferredAt DateTime @default(now()) @map("transferred_at")

  member    Member @relation(fields: [memberId], references: [id], onDelete: Cascade)
  fromClass Class? @relation("FromClass", fields: [fromClassId], references: [id])
  toClass   Class  @relation("ToClass", fields: [toClassId], references: [id])
  user      User   @relation(fields: [transferredBy], references: [id])

  @@index([memberId])
  @@index([transferredAt])
  @@map("member_class_history")
}

// ============================================
// 4. Attendance
// ============================================

model AttendanceWindow {
  id         String   @id @default(uuid())
  sundayDate DateTime @unique @map("sunday_date") @db.Date
  opensAt    DateTime @map("opens_at")
  closesAt   DateTime @map("closes_at")
  createdBy  String   @map("created_by")
  createdAt  DateTime @default(now()) @map("created_at")

  // Relations
  creator             User                @relation(fields: [createdBy], references: [id])
  classAttendance     ClassAttendance[]
  memberAttendance    MemberAttendance[]
  distributionBatches DistributionBatch[]
  classOfferings      ClassOffering[]

  @@map("attendance_windows")
}

model ClassAttendance {
  id                 String   @id @default(uuid())
  classId            String   @map("class_id")
  attendanceWindowId String   @map("attendance_window_id")
  count              Int
  takenBy            String   @map("taken_by")
  takenAt            DateTime @default(now()) @map("taken_at")

  // Relations
  class            Class            @relation(fields: [classId], references: [id], onDelete: Cascade)
  attendanceWindow AttendanceWindow @relation(fields: [attendanceWindowId], references: [id], onDelete: Cascade)
  user             User             @relation(fields: [takenBy], references: [id])

  @@unique([classId, attendanceWindowId])
  @@index([classId])
  @@index([attendanceWindowId])
  @@map("class_attendance")
}

model MemberAttendance {
  id                 String   @id @default(uuid())
  memberId           String   @map("member_id")
  classId            String   @map("class_id")
  attendanceWindowId String   @map("attendance_window_id")
  status             String // 'present' or 'absent'
  markedBy           String   @map("marked_by")
  markedAt           DateTime @default(now()) @map("marked_at")
  notes              String?

  // Relations
  member           Member           @relation(fields: [memberId], references: [id], onDelete: Cascade)
  class            Class            @relation(fields: [classId], references: [id], onDelete: Cascade)
  attendanceWindow AttendanceWindow @relation(fields: [attendanceWindowId], references: [id], onDelete: Cascade)
  user             User             @relation("MemberAttendanceMarkedBy", fields: [markedBy], references: [id])

  @@unique([memberId, attendanceWindowId])
  @@index([memberId])
  @@index([classId])
  @@index([attendanceWindowId])
  @@map("member_attendance")
}

// ============================================
// 5. Kitchen
// ============================================

model KitchenRecipe {
  id              String   @id @default(uuid())
  name            String
  description     String?
  ingredients     String?  @db.Text
  instructions    String?  @db.Text
  portionSizes    String?  @map("portion_sizes") @db.Text
  nutritionalInfo String?  @map("nutritional_info") @db.Text
  category        String?
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Relations
  productionLogs KitchenProductionLog[]

  @@index([category])
  @@map("kitchen_recipes")
}

model KitchenProductionLog {
  id       String   @id @default(uuid())
  recipeId String   @map("recipe_id")
  quantity Int
  weekDate DateTime @map("week_date") @db.Date
  loggedBy String   @map("logged_by")
  loggedAt DateTime @default(now()) @map("logged_at")

  // Relations
  recipe KitchenRecipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  user   User          @relation(fields: [loggedBy], references: [id])

  @@index([weekDate])
  @@map("kitchen_production_logs")
}

// ============================================
// 6. Distribution
// ============================================

model DistributionBatch {
  id                 String   @id @default(uuid())
  attendanceWindowId String   @map("attendance_window_id")
  totalFoodReceived  Int      @map("total_food_received")
  totalWaterReceived Int      @map("total_water_received")
  confirmedBy        String   @map("confirmed_by")
  confirmedAt        DateTime @default(now()) @map("confirmed_at")

  // Relations
  attendanceWindow   AttendanceWindow    @relation(fields: [attendanceWindowId], references: [id], onDelete: Cascade)
  user               User                @relation(fields: [confirmedBy], references: [id])
  classDistributions ClassDistribution[]

  @@index([attendanceWindowId])
  @@map("distribution_batches")
}

model ClassDistribution {
  id                  String         @id @default(uuid())
  distributionBatchId String         @map("distribution_batch_id")
  classId             String         @map("class_id")
  foodAllocated       Int            @map("food_allocated")
  waterAllocated      Int            @map("water_allocated")
  allocationType      AllocationType @map("allocation_type")
  distributedBy       String         @map("distributed_by")
  distributedAt       DateTime       @default(now()) @map("distributed_at")

  // Relations
  distributionBatch DistributionBatch @relation(fields: [distributionBatchId], references: [id], onDelete: Cascade)
  class             Class             @relation(fields: [classId], references: [id], onDelete: Cascade)
  user              User              @relation(fields: [distributedBy], references: [id])

  @@index([classId])
  @@index([distributionBatchId])
  @@map("class_distributions")
}

enum AllocationType {
  DEFAULT
  EXTRA
}

// ============================================
// 6.1. Offerings & Tithe
// ============================================

model ClassOffering {
  id                 String   @id @default(uuid())
  classId            String   @map("class_id")
  attendanceWindowId String   @map("attendance_window_id")
  offeringAmount     Decimal  @db.Decimal(10, 2) @map("offering_amount")
  titheAmount        Decimal  @db.Decimal(10, 2) @map("tithe_amount")
  recordedBy         String   @map("recorded_by")
  recordedAt         DateTime @default(now()) @map("recorded_at")
  notes              String?  @db.Text

  // Relations
  class            Class            @relation(fields: [classId], references: [id], onDelete: Cascade)
  attendanceWindow AttendanceWindow @relation(fields: [attendanceWindowId], references: [id], onDelete: Cascade)
  user             User             @relation(fields: [recordedBy], references: [id])

  @@unique([classId, attendanceWindowId])
  @@index([classId])
  @@index([attendanceWindowId])
  @@index([recordedAt])
  @@map("class_offerings")
}

// ============================================
// 7. Empowerment
// ============================================

model EmpowermentRequest {
  id          String          @id @default(uuid())
  memberId    String          @map("member_id")
  type        EmpowermentType
  description String?
  status      RequestStatus   @default(PENDING)
  requestedBy String          @map("requested_by")
  approvedBy  String?         @map("approved_by")
  createdAt   DateTime        @default(now()) @map("created_at")
  approvedAt  DateTime?       @map("approved_at")

  // Relations
  member    Member @relation(fields: [memberId], references: [id], onDelete: Cascade)
  requester User   @relation("CreatedBy", fields: [requestedBy], references: [id])
  approver  User?  @relation("ApprovedBy", fields: [approvedBy], references: [id])

  @@index([memberId])
  @@index([status])
  @@map("empowerment_requests")
}

enum EmpowermentType {
  SKILL
  MONEY
  DRUG
  ITEM
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

// ============================================
// 8. Member Logs
// ============================================

model MemberLog {
  id        String   @id @default(uuid())
  memberId  String   @map("member_id")
  createdBy String   @map("created_by")
  note      String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  member      Member                @relation(fields: [memberId], references: [id], onDelete: Cascade)
  user        User                  @relation(fields: [createdBy], references: [id])
  attachments MemberLogAttachment[]

  @@index([memberId])
  @@map("member_logs")
}

model MemberLogAttachment {
  id          String   @id @default(uuid())
  memberLogId String   @map("member_log_id")
  fileUrl     String   @map("file_url")
  fileType    FileType @map("file_type")
  fileSize    Int      @map("file_size")

  // Relations
  memberLog MemberLog @relation(fields: [memberLogId], references: [id], onDelete: Cascade)

  @@map("member_log_attachments")
}

enum FileType {
  IMAGE
  PDF
}

// ============================================
// 9. Requests (General)
// ============================================

model Request {
  id          String        @id @default(uuid())
  type        String
  description String?       @db.Text
  status      RequestStatus @default(PENDING)
  requestedBy String        @map("requested_by")
  handledBy   String?       @map("handled_by")
  createdAt   DateTime      @default(now()) @map("created_at")
  resolvedAt  DateTime?     @map("resolved_at")

  // Relations
  requester User  @relation("CreatedBy", fields: [requestedBy], references: [id])
  handler   User? @relation("HandledBy", fields: [handledBy], references: [id])

  @@index([status])
  @@index([type])
  @@map("requests")
}

// ============================================
// 10. Events
// ============================================

model Event {
  id               String      @id @default(uuid())
  title            String
  description      String?     @db.Text
  scope            EventScope
  classId          String?     @map("class_id")
  eventDate        DateTime    @map("event_date")
  isRecurring      Boolean     @default(false) @map("is_recurring")
  requiresApproval Boolean     @default(false) @map("requires_approval")
  status           EventStatus @default(PENDING)
  createdBy        String      @map("created_by")
  createdAt        DateTime    @default(now()) @map("created_at")

  // Relations
  class           Class?            @relation(fields: [classId], references: [id])
  creator         User              @relation(fields: [createdBy], references: [id])
  eventAttendance EventAttendance[]

  @@index([scope])
  @@index([classId])
  @@index([eventDate])
  @@map("events")
}

enum EventScope {
  GLOBAL
  CLASS
}

enum EventStatus {
  PENDING
  APPROVED
}

model EventAttendance {
  id       String  @id @default(uuid())
  eventId  String  @map("event_id")
  memberId String  @map("member_id")
  attended Boolean @default(false)

  // Relations
  event  Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
  member Member @relation(fields: [memberId], references: [id], onDelete: Cascade)

  @@map("event_attendance")
}

// ============================================
// 11. Notifications
// ============================================

model Notification {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  title     String
  message   String   @db.Text
  isRead    Boolean  @default(false) @map("is_read")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@map("notifications")
}

// ============================================
// 12. Activity Logs (Audit Trail)
// ============================================

model ActivityLog {
  id         String   @id @default(uuid())
  actorId    String   @map("actor_id")
  action     String
  entityType String   @map("entity_type")
  entityId   String?  @map("entity_id")
  metadata   Json?
  createdAt  DateTime @default(now()) @map("created_at")

  // Relations
  actor User @relation(fields: [actorId], references: [id])

  @@index([actorId])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@map("activity_logs")
}
